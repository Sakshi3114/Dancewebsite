doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title List of students 
  style.
    table,th,td{
    border: 2px double black;
    }
    td{
    text-align: center;
    }
    h1{
    text-align: center;
    } 
body     
  .container
    h1 Member list
    table(style='width: 100%;')
      thead
        tr
          th Name
          th Gender
          th Phone number
          th Email
          th Action
      tbody
        each member in x
          tr
            td #{member.name}
            td #{member.gender}
            td #{member.phno}
            td #{member.email}
            td 
              a(href=`/member/${member._id}`) | view